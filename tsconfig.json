{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2023",
		"outDir": "out",
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", ".vscode-test"]
}
