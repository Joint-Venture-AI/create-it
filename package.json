{
  "name": "create-it",
  "displayName": "Create It - Project Template Manager",
  "description": "Create projects from awesome templates with interactive UI",
  "version": "1.0.1",
  "publisher": "jvai",
  "engines": {
    "vscode": "^1.85.0"
  },
  "type": "module",
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "template",
    "project",
    "boilerplate",
    "starter",
    "generator"
  ],
  "activationEvents": [
    "onView:create-it-sidebar"
  ],
  "main": "./out/extension.cjs",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "create-it-container",
          "title": "Create It",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "create-it-container": [
        {
          "id": "create-it-sidebar",
          "name": "Template Manager",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "create-it.createProject",
        "title": "Create Project from Template",
        "category": "Create It",
        "icon": "$(new-folder)"
      },
      {
        "command": "create-it.openConfig",
        "title": "Open Templates Configuration",
        "category": "Create It",
        "icon": "$(settings-gear)"
      },
      {
        "command": "create-it.reloadTemplates",
        "title": "Reload Templates",
        "category": "Create It",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "create-it.createProject"
        },
        {
          "command": "create-it.openConfig"
        },
        {
          "command": "create-it.reloadTemplates"
        }
      ]
    },
    "configuration": {
      "title": "Project Template Manager",
      "properties": {
        "projectTemplateManager.defaultPath": {
          "type": "string",
          "default": "",
          "description": "Default path for creating new projects"
        },
        "projectTemplateManager.customTemplates": {
          "type": "string",
          "default": "",
          "description": "Path to custom templates JSON file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.1",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Joint-Venture-AI/create-it.git"
  },
  "icon": "public/logo.png"
}